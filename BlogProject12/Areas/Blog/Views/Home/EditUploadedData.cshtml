@model Tuple<BlogProject12.Models.BlogModel, IEnumerable<BlogProject12.Models.TagModel>>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    //var title = "Create Tag";
}

<!DOCTYPE html>
<html>
<head>
    @*<script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
        <script>tinymce.init({ selector: 'textarea' });</script>*@
    <script src="https://cdn.tiny.cloud/1/vh20vjsimtspz1sdwqfpdnt403twu0nwct3ge7r30q01nri5/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <h1>Create a blog</h1>
</head>


<body>
    <form method="post">
        <div class="row p-3 border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-12 border-bottom">

            </div>
            <div class="col-8 pt-4">
                <div class="form-group row">
                    <div class="col-4">
                        Blog Title
                    </div>
                    <div class="col-8">
                        <input id="Blog_Title" name="Blog_Title" asp-for="@Model.Item1.BlogTitle" class="form-control" />
                        <span asp-validation-for="@Model.Item1.BlogTitle" class="text-danger"></span>
                        <br><br>
                    </div>
                    <div><br></div>
                    <div class="col-4">
                        Blog Content
                    </div>
                    <div class="col-8">
                        <textarea name="Blog_Content" asp-for="@Model.Item1.BlogRaw">Easy! You should check out MoxieManager!</textarea>
                        @*<input id="Blog_Content" name="Blog_Content" asp-for="@Model.Item1.BlogRaw" class="form-control" />*@
                        <span asp-validation-for="@Model.Item1.BlogRaw" class="text-danger"></span>
                        <br><br>
                    </div>
                    <div class="col-4">
                        Select Tag
                    </div>
                    <div class="col-8">
                        <select id="dropdowntag" name="Blog_tag">
                            <option TagId=0 name="Blog_tag">Select Item</option>

                            @{
                                foreach (var item in Model.Item2)
                                {
                                    <option TagId=@item.Id name="Blog_tag">@item.TagName</option>
                                }
                            }

                        </select>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4">

                        <button type="submit" class="btn btn-primary form-control">Request for approve this blog </button>
                    </div>
                </div>
            </div>
        </div>
    </form>


    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
            toolbar: 'a11ycheck addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
            toolbar_mode: 'floating',
            tinycomments_mode: 'embedded',
            tinycomments_author: 'Author name',
        });
    </script>

    @*
        <textarea>Easy! You should check out MoxieManager!</textarea>*@
</body>
</html>



