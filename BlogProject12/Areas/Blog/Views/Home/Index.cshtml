            {
                <a class="nav-link text-dark text-right" asp-area="User" asp-controller="User" asp-action="UserSignUp">SignUp</a>
                <a class="nav-link text-dark text-right" asp-area="User" asp-controller="User" asp-action="UserLogin">Login</a>
                <a class="nav-link text-dark text-right" asp-area="User" asp-controller="User" asp-action="AdminSignUp">AdminSignUp</a>

            }
            <a class="nav-link text-dark text-right" asp-area="User" asp-controller="User" asp-action="SuperUserSection">Admin Request List</a>
            User-*@



                </div>
        </div>
    </nav>
</header>




<div class="row pb-3 backgroundWhite">


    @if (User.FindFirst("IsAdmin").Value == "0")
    {


        @foreach (var blog in Model)
        {
            @if (blog.IsApproved == 1)
            {
                <div class="container">
                    <div class="row">

                        <a class="btn btn-primary" asp-action="Detail" asp-route-id="@blog.Id"><h3>@blog.BlogTitle</h3></a>

                        <div class="container">

                            <div class="row">

                                <br>
                                <br>

                            </div>

                        </div>

                    </div>

                </div>
            }
            }
        }


</div>


<div class="row pb-3 backgroundWhite">


    @if (User.FindFirst("IsAdmin").Value == "1")
    {
       
    <div><br> Blog Request List<hr><br></div>

        @foreach (var blog in Model)
        {
            @if (blog.IsRequested == 1 && blog.IsApproved == 0 && blog.IsRejected == 0 && blog.ChangeRequested==0)
            {
            <div class="container">
                <div class="row">

                    <a class="btn btn-primary" asp-action="Detail" asp-route-id="@blog.Id"><h3>@blog.BlogTitle</h3></a>

                    <div class="container">

                        <div class="row">

                            <br>
                            <br>

                        </div>

                    </div>

                </div>

            </div>
                }
            }

    }


</div>



