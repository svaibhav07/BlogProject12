@using Microsoft.Extensions.Options
@inject IOptions<BlogProject12.Utilities.CashfreePayment.CashFreeKeys> Keys
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model BlogProject12.Models.Payments1
@*@using static BlogProject12.Utilities.CashfreePayment.PaymentForm*@

<div class="container fluid">
    <h1 align="center">Cashfree PG Test Form</h1>
    <div class="alert alert-info">
        <strong>Note: </strong> Please insert your <span class="label label-info">Secret_key</span> in request and response functions.
    </div>
    <div class="alert alert-info">
        <strong>Note: </strong> Please change <span class="label label-info">mode</span> to "TEST" in request if using Test appId/secretKey credentials. Access test credentials <a href="https://test.gocashfree.com/merchant/pg#api-key">here</a> and production credentials <a href="https://merchant.cashfree.com/merchant/pg#api-key">here</a>.
    </div>
    <form id="redirectForm" method="post" action="@Url.Action("HandleRequest")">
        <div class="form-group">
            <label>App ID:</label><br>
            <input @*type="hidden"*@ class="form-control" name="appId" placeholder="Enter App ID here (Ex. 123456a7890bc123defg4567)" value="@Keys.Value.CashFreeAppId" />
        </div>
        <div class="form-group">
            <label>Order ID:</label><br>
            <input@* type="hidden"*@ class="form-control" name="orderId" placeholder="Enter Order ID here (Ex. order00001)" value="@Model.OrderId" />
        </div>
        <div class="form-group">
            @* <label>Order Amount:</label><br>*@
            <input class="form-control" name="orderAmount" placeholder="Enter Order Amount here (Ex. 100)" value="@Model.Ammount" />
        </div>
        <div class="form-group">
            @* <label>Order Currency:</label><br>*@
            <input class="form-control" name="orderCurrency" value="INR" placeholder="Enter Currency here (Ex. INR)" />
        </div>
        <div class="form-group">
            <label>Order Note:</label><br>
            <input class="form-control" name="orderNote" placeholder="Enter Order Note here (Ex. Test order)" />
        </div>
        <div class="form-group">
            <label>Name:</label><br>
            <input class="form-control" name="customerName" placeholder="Enter your name here (Ex. John Doe)" value="@Model.User.FirstName" />
        </div>
        <div class="form-group">
            <label>Email:</label><br>
            <input class="form-control" name="customerEmail" placeholder="Enter your email address here (Ex. Johndoe@test.com)" value="@Model.User.Email" />
        </div>
        <div class="form-group">
            <label>Phone:</label><br>
            <input class="form-control" name="customerPhone" placeholder="Enter your phone number here (Ex. 9999999999)" value="@Model.User.Phone" />
        </div>
        <div class="form-group">
            <label>Return URL:</label><br>
            <input class="form-control" name="returnUrl" placeholder="Enter the URL to which customer will be redirected (Ex. www.example.com)" value="@ViewData["CallBackUrl"]" />
        </div>
        <div class="form-group">
            <label>Notify URL:</label><br>
            <input class="form-control" name="notifyUrl" placeholder="Enter the URL to get server notificaitons (Ex. www.example.com)" />
        </div>
        <button type="submit" class="btn btn-primary btn-block" value="Pay">Submit</button>
        <br>
        <br>
    </form>
</div>