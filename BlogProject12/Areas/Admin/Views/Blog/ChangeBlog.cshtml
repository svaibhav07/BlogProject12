@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model BlogProject12.Models.BlogModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    //var title = "Create Tag";
}



<h1>Create a blog</h1>

<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 border-bottom">

        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div><br></div>
                <div class="col-4">
                    Message for User
                </div>
                <div class="form-group">                    
                    <textarea class="form-control rounded-0" id="Message" rows="10" cols="100" name="change_message" ></textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <button type="submit" asp-route=@Model.Id class="btn btn-primary form-control">Send</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{

    <partial name="_ValidationScriptsPartial" />
}

